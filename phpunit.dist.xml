<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         failOnNotice="true"
         failOnWarning="true"
         bootstrap="tests/bootstrap.php"
         executionOrder="depends,random"
         cacheDirectory="var/.phpunit.cache/">

    <php>
        <ini    name="display_errors" value="1" />
        <ini    name="error_reporting" value="-1" />
        <server name="SHELL_VERBOSITY" value="-1" />
        <server name="SYMFONY_PHPUNIT_REMOVE" value="" />
        <!-- server name="SYMFONY_PHPUNIT_VERSION" value="12.4" / -->
        <server name="APP_ENV" value="test" force="true" />
    </php>

    <testsuites>
        <testsuite name="API MiW Usuarios Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <file>src/Kernel.php</file>
            <directory>src/Repository</directory>
            <directory>src/Command</directory>
        </exclude>
    </source>

    <coverage>
        <report>
            <html outputDirectory="docs/Coverage_report/"/>
            <!-- text outputFile="docs/Coverage_report/coverage.txt" / !-->
            <xml outputDirectory="var/coverage/"/>
        </report>
    </coverage>

    <logging>
        <junit outputFile="var/coverage/index.junit.xml"/>
    </logging>
    <extensions>
    </extensions>
    <!-- listeners>
        <listener class="Symfony\Bridge\PhpUnit\SymfonyTestsListener" />
    </listeners -->
</phpunit>
